<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_unit_weight_tolerance_report_tree" model="ir.ui.view">
        <field name="name">unit.weight.tolerance.report.list</field>
        <field name="model">unit.weight.tolerance.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="workorder_no"/>
                <field name="machine_id"/>
                <field name="shift_display"/>
                <field name="product_id"/>
                <field name="supervisor_one_id"/>
                <field name="supervisor_two_id"/>
                <field name="time_slot"/>
                <field name="actual_weight"/>
                <field name="std_weight"/>
                <field name="tolerance"/>
                <button name="action_hide"
                        type="object"
                        string="Hide"
                        class="btn-primary"/>
            </list>
        </field>
    </record>

    <record id="view_unit_weight_tolerance_wizard_form"
            model="ir.ui.view">
        <field name="name">unit.weight.tolerance.wizard.form</field>
        <field name="model">unit.weight.tolerance.wizard</field>
        <field name="arch" type="xml">
            <form string="Acknowledge Unit Weight Tolerance">
                <group>
                    <field name="reason_id" required="1"/>
                    <field name="action"/>
                </group>
                <footer>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_unit_weight_tolerance_report" model="ir.actions.act_window">
        <field name="name">Unit Weight Tolerance</field>
        <field name="res_model">unit.weight.tolerance.report</field>
        <field name="view_mode">list</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_unit_weight_tolerance_report"
              name="Unit Weight Tolerance"
              parent="menu_admin_tolerance"
              action="action_unit_weight_tolerance_report"
              sequence="60"/>
</odoo>
