<odoo>

    <record id="view_production_delay_summary_list" model="ir.ui.view">
        <field name="name">production.delay.summary.list</field>
        <field name="model">production.delay.summary</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="wo_date" optional="show"/>
                <field name="wo_no" optional="show"/>
                <field name="party_id" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="machine_id" optional="show"/>
                <field name="qty" optional="show"/>
                <field name="planned_start_date" optional="show"/>
                <field name="actual_start_date" optional="show"/>
                <field name="exp_delivery_date" optional="show"/>
                <field name="production_close_date" optional="show"/>
                <field name="production_end_date" optional="show"/>
                <field name="production_delay" optional="show"/>
                <field name="action" optional="show"/>
                <field name="reason_id" optional="show"/>
                <field name="action_by" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_production_delay_summary" model="ir.actions.act_window">
        <field name="name">Production Delay Summary</field>
        <field name="res_model">production.delay.summary</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_production_delay_summary"
              name="Production Delay Summary"
              parent="menu_admin_tolerance"
              action="action_production_delay_summary"/>

</odoo>
