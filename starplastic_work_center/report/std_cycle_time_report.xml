<odoo>

    <record id="action_std_cycle_time_report" model="ir.actions.act_window">
        <field name="name">Standard Cycle Time Report</field>
        <field name="res_model">std.cycle.time.report</field>
        <field name="view_mode">list</field>
        <!-- <field name="domain">[('is_hidden','=',False)]</field> -->
    </record>

    <record id="view_std_cycle_time_list" model="ir.ui.view">
        <field name="name">std.cycle.time.report.list</field>
        <field name="model">std.cycle.time.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="date"/>
                <field name="workorder_no"/>
                <field name="machine_id"/>
                <field name="shift_display"/>
                <field name="product_id"/>
                <field name="supervisor_one_id"/>
                <field name="supervisor_two_id"/>
                <field name="set_cycle_time"/>
                <field name="std_cycle_time"/>
                <field name="tolerance"/>
                <button name="action_hide"
                        type="object"
                        string="Hide"
                        class="btn-primary"
                        invisible="[('is_hidden','=',True)]"/>
            </list>
        </field>
    </record>

    <record id="view_std_cycle_time_reason_wizard_form" model="ir.ui.view">
        <field name="name">std.cycle.time.reason.wizard.form</field>
        <field name="model">std.cycle.time.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Acknowledge Standard Cycle Time">
                <group>
                    <field name="std_cycle_time_id" invisible="1"/>
                    <field name="reason_id" required="1"/>
                    <field name="action"/>
                </group>
                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
