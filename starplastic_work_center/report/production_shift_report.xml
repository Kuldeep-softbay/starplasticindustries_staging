<odoo>
    <record id="view_production_shift_report_tree" model="ir.ui.view">
        <field name="name">production.shift.report.list</field>
        <field name="model">mrp.production.shift.report</field>
        <field name="arch" type="xml">
            <list>
                <field name="workcenter_id" optional="show"/>
                <field name="shift_display" optional="show"/>
                <field name="cavity" optional="show"/>
                <field name="downtime_minutes" optional="show"/>
                <field name="reason_id" optional="show"/>
                <field name="sub_reason_id" optional="show"/>
                <field name="explanation" optional="show"/>
                <field name="date" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_production_shift_report" model="ir.actions.act_window">
        <field name="name">Production Shift Report</field>
        <field name="res_model">mrp.production.shift.report</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_mrp_reporting_production_shift_report"
              name="Production Shift Report"
              parent="mrp.menu_mrp_reporting"
              action="action_production_shift_report"/>
</odoo>