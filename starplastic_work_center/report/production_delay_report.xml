<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Production Delay Report List -->
    <record id="view_production_delay_list" model="ir.ui.view">
        <field name="name">production.delay.report.list</field>
        <field name="model">production.delay.report</field>
        <field name="arch" type="xml">
            <list create="false" edit="false">
                <field name="wo_date" optional="show"/>
                <field name="wo_no" optional="show"/>
                <field name="party_id" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="machine_id" optional="show"/>
                <field name="qty" optional="show"/>
                <field name="planned_start_date" optional="show"/>
                <field name="actual_start_date" optional="show"/>
                <field name="exp_delivery_date" optional="show"/>
                <field name="production_close_date" optional="show"/>
                <field name="production_end_date" optional="show"/>
                <field name="production_delay" optional="show"/>

                <button name="action_hide"
                        type="object"
                        string="Hide"
                        class="btn-secondary"/>

                <button name="action_report_delay"
                        type="object"
                        string="Report Delay"
                        class="btn-primary"/>
            </list>
        </field>
    </record>

    <!-- Wizard -->
    <record id="view_production_delay_reason_wizard" model="ir.ui.view">
        <field name="name">production.delay.reason.wizard.form</field>
        <field name="model">production.delay.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Acknowledge Production Delay">
                <group>
                    <field name="reason_id"/>
                    <field name="action"/>
                </group>
                <footer>
                    <button string="Confirm"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_production_delay_report" model="ir.actions.act_window">
        <field name="name">Production Delay Report</field>
        <field name="res_model">production.delay.report</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_production_delay_report"
              name="Production Delay Report"
              parent="menu_admin_tolerance"
              action="action_production_delay_report"/>

</odoo>
