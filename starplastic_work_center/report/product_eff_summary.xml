<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_product_efficiency_summary_tree" model="ir.ui.view">
        <field name="name">product.efficiency.summary.list</field>
        <field name="model">product.efficiency.summary</field>
        <field name="arch" type="xml">
            <list>
                <field name="product_id" optional="show"/>
                <field name="avg_weight" optional="show"/>
                <field name="cavity" optional="show"/>
                <field name="std_production" optional="show"/>
                <field name="std_cycle_time" optional="show"/>
                <field name="total_production_nos" optional="show"/>
                <field name="total_production_kg" optional="show"/>
                <field name="production_minutes" optional="show"/>
                <field name="production_hours" optional="show"/>
                <field name="actual_production_per_hour" optional="show"/>
                <field name="efficiency" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_product_efficiency_summary" model="ir.actions.act_window">
        <field name="name">Product Efficiency Summary</field>
        <field name="res_model">product.efficiency.summary</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_product_efficiency_summary"
              name="Product Efficiency Summary"
              parent="mrp.menu_mrp_reporting"
              action="action_product_efficiency_summary"/>
</odoo>
