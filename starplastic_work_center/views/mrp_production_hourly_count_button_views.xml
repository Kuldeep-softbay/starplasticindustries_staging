<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="mrp_production_form_inherit_starplastic_hourly_entries_btn" model="ir.ui.view">
    <field name="name">mrp.production.form.inherit.starplastic.hourly.entries.btn</field>
    <field name="model">mrp.production</field>
    <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@name='button_box']" position="inside">
               <button type="object"
                name="action_view_hourly_entries"
                class="oe_stat_button"
                icon="fa-clock-o">
          <field name="hourly_entry_count" widget="statinfo" string="Hourly Entries"/>
        </button></xpath>
    </field>
  </record>
</odoo>