<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_power_consumption_list" model="ir.ui.view">
        <field name="name">mrp.power.consumption.list</field>
        <field name="model">mrp.power.consumption</field>
        <field name="arch" type="xml">
            <list>
                <field name="consumption_date"/>
                <field name="location_id"/>
                <field name="meter_reading"/>
                <field name="additional_load1"/>
                <field name="additional_load2"/>
            </list>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_power_consumption_form" model="ir.ui.view">
        <field name="name">mrp.power.consumption.form</field>
        <field name="model">mrp.power.consumption</field>
        <field name="arch" type="xml">
            <form string="Power Consumption Entry">
                <sheet>
                    <group>
                        <field name="consumption_date"/>
                        <field name="location_id"/>
                        <field name="meter_reading"/>
                    </group>

                    <group string="Additional Load 1">
                        <field name="additional_load1"/>
                        <field name="remark_load1"/>
                    </group>

                    <group string="Additional Load 2">
                        <field name="additional_load2"/>
                        <field name="remark_load2"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_power_consumption" model="ir.actions.act_window">
        <field name="name">Power Consumption Entry</field>
        <field name="res_model">mrp.power.consumption</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- MENU UNDER MRP CONFIGURATION -->
    <menuitem id="menu_power_consumption"
              name="Power Consumption Entry"
              parent="mrp.menu_mrp_configuration"
              action="action_power_consumption"
              sequence="50"/>

</odoo>