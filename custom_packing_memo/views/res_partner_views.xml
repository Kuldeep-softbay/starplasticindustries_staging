<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_form_inherit_package_type" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.package.type</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales_purchases']//group" position="inside">
            <group string="Packaging">
                <field name="package_type_id"/>
                <field name="default_package_qty"/>
            </group>
            </xpath>
        </field>
    </record>    
</odoo>
