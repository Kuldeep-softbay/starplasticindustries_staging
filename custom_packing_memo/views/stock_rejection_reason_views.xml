<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_rejection_reason_list" model="ir.ui.view">
        <field name="name">rejection.reason.list</field>
        <field name="model">rejection.reason</field>
        <field name="arch" type="xml">
            <list string="Rejection Reasons">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_rejection_reason_form" model="ir.ui.view">
        <field name="name">rejection.reason.form</field>
        <field name="model">rejection.reason</field>
        <field name="arch" type="xml">
            <form string="Rejection Reason">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rejection_reason" model="ir.actions.act_window">
        <field name="name">Rejection Reasons</field>
        <field name="res_model">rejection.reason</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create rejection reasons to track production or quality rejections.
            </p>
        </field>
    </record>

    <menuitem
        id="menu_rejection_reason"
        name="Rejection Reasons"
        parent="stock.menu_stock_transfers"
        action="action_rejection_reason"
        sequence="10"
    />

</odoo>
