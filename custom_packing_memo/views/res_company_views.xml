<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_packing" model="ir.ui.view">
        <field name="name">res.company.form.inherit.packing.memo</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='branches']" position="after">
                <page string="Sales Header/Footer">
                    <group string="Packing Memo Branding">
                        <field name="packing_footer_image" widget="image" class="oe_avatar"/>
                        <field name="header_format_no"/>
                        <field name="header_effective_date"/>
                        <field name="header_review_date"/>
                    </group>

                    <group string="Quotation Branding">
                        <field name="quotation_header_image" widget="image" class="oe_avatar"/>
                        <field name="quotation_footer_image" widget="image" class="oe_avatar"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
