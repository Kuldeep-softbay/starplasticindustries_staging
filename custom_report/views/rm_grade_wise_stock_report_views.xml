<odoo>
    <!-- Wizard form -->
    <record id="view_rm_grade_wise_stock_wizard_form" model="ir.ui.view">
        <field name="name">rm.grade.wise.stock.wizard.form</field>
        <field name="model">rm.grade.wise.stock.wizard</field>
        <field name="arch" type="xml">
            <form string="RM Grade Wise Stock Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="party_id"/>
                        <field name="product_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report"
                            string="Show"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree (list) view -->
    <record id="view_rm_grade_wise_stock_report_tree" model="ir.ui.view">
        <field name="name">rm.grade.wise.stock.report.tree</field>
        <field name="model">rm.grade.wise.stock.report</field>
        <field name="arch" type="xml">
            <list string="RM Grade Wise Stock" create="false" edit="false" delete="false">
                <field name="date" optional="show"/>
                <field name="particulars" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="batch" optional="show"/>
                <field name="grade" optional="show"/>
                <field name="vendor_id" optional="show"/>
                <field name="invoice_no" optional="show"/>
                <field name="received_qty" optional="show"/>
                <field name="pmemo_no" optional="show"/>
                <field name="issue_qty" optional="show"/>
                <field name="balance_qty" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_rm_grade_wise_stock_report_search" model="ir.ui.view">
        <field name="name">rm.grade.wise.stock.report.search</field>
        <field name="model">rm.grade.wise.stock.report</field>
        <field name="arch" type="xml">
            <search string="RM Grade Wise Stock">
                <field name="date"/>
                <field name="product_id"/>
                <field name="vendor_id"/>
                <field name="grade"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_product" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="groupby_grade" string="Grade" context="{'group_by': 'grade'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_rm_grade_wise_stock_wizard" model="ir.actions.act_window">
        <field name="name">RM Grade Wise Stock Report</field>
        <field name="res_model">rm.grade.wise.stock.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_rm_grade_wise_stock_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
