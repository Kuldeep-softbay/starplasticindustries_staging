<odoo>
    <record id="view_dispatch_delay_report_tree" model="ir.ui.view">
        <field name="name">dispatch.delay.report.list</field>
        <field name="model">dispatch.delay.report</field>
        <field name="arch" type="xml">
            <list string="Dispatch Delay">
                <field name="packing_slip_no"/>
                <field name="partner_id"/>
                <field name="exp_dispatch_date"/>
                <field name="dispatch_date"/>
                <field name="remark"/>
                <field name="total_qty"/>
                <button name="action_hide"
                            type="object"
                            string="Hide"
                            class="btn-primary"/>
            </list>
        </field>
    </record>

    <record id="view_dispatch_delay_reason_wizard" model="ir.ui.view">
    <field name="name">dispatch.delay.reason.wizard.form</field>
    <field name="model">dispatch.delay.reason.wizard</field>
    <field name="arch" type="xml">
        <form string="Acknowledge Dispatch Delay">
            <group>
                <field name="picking_id"/>
                <field name="delay_reason_id" required="1"/>
            </group>
            <footer>
                <button string="Confirm"
                        type="object"
                        name="action_confirm"
                        class="btn-primary"/>
                <button string="Cancel"
                        special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_dispatch_delay_report" model="ir.actions.act_window">
        <field name="name">Dispatch Delay</field>
        <field name="res_model">dispatch.delay.report</field>
        <field name="view_mode">list</field>
    </record>
</odoo>
