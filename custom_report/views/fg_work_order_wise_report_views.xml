<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard form -->
    <record id="view_fg_work_order_wise_wizard_form" model="ir.ui.view">
        <field name="name">fg.work.order.wise.wizard.form</field>
        <field name="model">fg.work.order.wise.wizard</field>
        <field name="arch" type="xml">
            <form string="FG Work Order Wise Report">
                <group>
                    <group>
                        <field name="party_id"/>
                        <field name="product_id"/>
                    </group>
                    <group>
                    <field name="lot_id"
                        domain="[('product_id','=',product_id),
                                    ('quant_ids.quantity','>',0),
                                    ('quant_ids.location_id.usage','=','internal')]"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report" string="Show" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree view (report lines) -->
    <record id="view_fg_work_order_wise_line_list" model="ir.ui.view">
        <field name="name">fg.work.order.wise.line.list</field>
        <field name="model">fg.work.order.wise.line</field>
        <field name="arch" type="xml">
            <list string="FG Work Order Wise Report" create="false" edit="false" delete="false">
                <field name="party_id" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="lot_id" optional="show"/>
                <field name="actual_stock" optional="show"/>
                <field name="stock_available_for_packing" optional="show"/>
                <field name="unit_weight" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Search view -->
    <record id="view_fg_work_order_wise_line_search" model="ir.ui.view">
        <field name="name">fg.work.order.wise.line.search</field>
        <field name="model">fg.work.order.wise.line</field>
        <field name="arch" type="xml">
            <search string="FG Work Order Wise">
                <field name="party_id"/>
                <field name="product_id"/>
                <field name="lot_id"/>
            </search>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_fg_work_order_wise_wizard" model="ir.actions.act_window">
        <field name="name">FG Work Order Wise Report</field>
        <field name="res_model">fg.work.order.wise.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_fg_work_order_wise_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
