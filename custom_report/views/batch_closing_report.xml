<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================= TREE VIEW ================= -->
    <record id="view_batch_closing_report_list" model="ir.ui.view">
        <field name="name">batch.closing.report.list</field>
        <field name="model">batch.closing.report</field>
        <field name="arch" type="xml">
            <list string="Batch Closing Report">
                <field name="lot_id" optional="show"/>
                <field name="wo_date" optional="show"/>
                <field name="product_id" optional="show"/>
                <field name="black_spot" optional="show"/>
                <field name="cut_pcs" optional="show"/>
                <field name="short_qty" optional="show"/>
                <field name="wo_qty" optional="show"/>
                <field name="production_qty" optional="show"/>
                <field name="dispatch_qty" optional="show"/>
                <field name="month" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- ================= ACTION ================= -->
    <record id="action_batch_closing_report" model="ir.actions.act_window">
        <field name="name">Batch Closing Report</field>
        <field name="res_model">batch.closing.report</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p>
                This report shows month-wise batch closing details
                including production, dispatch and rejection quantities.
            </p>
        </field>
    </record>


    <!-- ================= MENU ================= -->
    <menuitem id="menu_batch_closing_report"
              name="Batch Closing Report"
              parent="stock.menu_warehouse_report"
              action="action_batch_closing_report"
              sequence="50"/>

</odoo>
