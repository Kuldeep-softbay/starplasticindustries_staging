<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_dispatch_delay_reason_tree" model="ir.ui.view">
        <field name="name">dispatch.delay.reason.list</field>
        <field name="model">dispatch.delay.reason</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_dispatch_delay_reason_form" model="ir.ui.view">
        <field name="name">dispatch.delay.reason.form</field>
        <field name="model">dispatch.delay.reason</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_dispatch_delay_reason" model="ir.actions.act_window">
        <field name="name">Dispatch Delay Reasons</field>
        <field name="res_model">dispatch.delay.reason</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="view_dispatch_delay_popup" model="ir.ui.view">
        <field name="name">dispatch.delay.popup.form</field>
        <field name="model">stock.picking</field>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <form string="Dispatch Delay Reason">
                <group>
                    <field name="delay_reason_id" required="1"/>
                    <field name="delay_remark"/>
                </group>
                <footer>
                    <button string="Confirm" special="save" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_picking_form_delay_inherit" model="ir.ui.view">
        <field name="name">stock.picking.form.delay</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet/notebook" position="inside">
                <page string="Dispatch Delay" invisible="is_dispatch_delayed == False">
                    <group>
                        <field name="delay_reason_id"/>
                        <field name="delay_remark"/>
                    </group>
                </page>
            </xpath>

        </field>
    </record>

    <record id="view_dispatch_delay_summary_tree" model="ir.ui.view">
        <field name="name">dispatch.delay.summary.list</field>
        <field name="model">dispatch.delay.summary</field>
        <field name="arch" type="xml">
            <list>
                <field name="picking_name" string="Packing Slip No" optional="show"/>
                <field name="partner_id" optional="show"/>
                <field name="exp_dispatch_date" optional="show"/>
                <field name="dispatch_date" optional="show"/>
                <field name="remarks" optional="show"/>
                <field name="total_qty" optional="show"/>
                <field name="delay_reason_id" optional="show"/>
                <field name="action" optional="show"/>
                <field name="action_taken" optional="show"/>
            </list>
        </field>
    </record>

    <record id="action_dispatch_delay_summary" model="ir.actions.act_window">
        <field name="name">Dispatch Delay Report Summary</field>
        <field name="res_model">dispatch.delay.summary</field>
        <field name="view_mode">list</field>
    </record>

    <menuitem id="menu_dispatch_delay_reason"
              name="Delay Reasons"
              parent="menu_dispatch_delay_reports"
              action="action_dispatch_delay_reason"/>
    <menuitem id="menu_dispatch_delay_summary"
              name="Dispatch Delay Summary"
              parent="menu_dispatch_delay_reports"
              action="action_dispatch_delay_summary"/>
</odoo>
