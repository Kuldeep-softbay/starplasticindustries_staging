<odoo>
    <!-- Wizard form -->
    <record id="view_rm_real_store_book_wizard_form" model="ir.ui.view">
        <field name="name">rm.real.store.book.wizard.form</field>
        <field name="model">rm.real.store.book.wizard</field>
        <field name="arch" type="xml">
            <form string="RM Real Store Book Report">
                <group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="party_id"/>
                        <field name="product_id"/>
                    </group>
                    <group>
                        <field name="particulars"/>
                        <field name="location_id"/>
                    </group>
                </group>
                <footer>
                    <button name="action_show_report"
                            string="Show"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Tree view -->
    <record id="view_rm_real_store_book_report_tree" model="ir.ui.view">
        <field name="name">rm.real.store.book.report.list</field>
        <field name="model">rm.real.store.book.report</field>
        <field name="arch" type="xml">
            <list string="RM Real Store Book" create="false" edit="false" delete="false">
                <field name="date" optional="show"/>
                <field name="particulars"/>
                <field name="product_id"/>
                <field name="batch"/>
                <field name="grade"/>
                <field name="vendor_id"/>
                <field name="invoice_no"/>
                <field name="received_qty"/>
                <field name="pmemo_no"/>
                <field name="production_qty"/>
                <field name="balance_qty"/>
            </list>
        </field>
    </record>

    <!-- (Optional) search view -->
    <record id="view_rm_real_store_book_report_search" model="ir.ui.view">
        <field name="name">rm.real.store.book.report.search</field>
        <field name="model">rm.real.store.book.report</field>
        <field name="arch" type="xml">
            <search string="RM Real Store Book">
                <field name="date"/>
                <field name="product_id"/>
                <field name="vendor_id"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_product" string="Product" context="{'group_by': 'product_id'}"/>
                    <filter name="groupby_vendor" string="Vendor" context="{'group_by': 'vendor_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action to open wizard -->
    <record id="action_rm_real_store_book_wizard" model="ir.actions.act_window">
        <field name="name">RM Real Store Book Report</field>
        <field name="res_model">rm.real.store.book.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_rm_real_store_book_wizard_form"/>
        <field name="target">new</field>
    </record>
</odoo>
