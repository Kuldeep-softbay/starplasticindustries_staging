<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================== -->
    <!-- Wizard Form -->
    <!-- ===================================================== -->
    <record id="view_production_report_wizard_form" model="ir.ui.view">
        <field name="name">production.report.wizard.form</field>
        <field name="model">production.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Production Report">
                <group>
                    <group>
                        <field name="product_id"/>
                        <field name="lot_id"
                               domain="[('product_id', '=', product_id)]"
                               help="Select batch number from Lots" string="Batch Number"/> 
                    </group>
                </group>
                <footer>
                    <button name="action_show_report"
                            string="Show"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- ===================================================== -->
    <!-- Tree View -->
    <!-- ===================================================== -->
    <record id="view_production_report_line_tree" model="ir.ui.view">
        <field name="name">production.report.line.tree</field>
        <field name="model">production.report.line</field>
        <field name="arch" type="xml">
            <list string="Production Report"
                  create="false"
                  edit="false"
                  delete="false">
                <field name="lot_id" string="Batch No" optional="hide"/>
                <field name="product_id" string="Item Name"/>
                <field name="total_production" string="Total Production"/>
                <field name="total_dispatch" string="Total Dispatch"/>
                <field name="total_reject" string="Rejection"/>
                <field name="balance" string="Stock"/>

            </list>
        </field>
    </record>

    <!-- ===================================================== -->
    <!-- Search View -->
    <!-- ===================================================== -->
    <record id="view_production_report_line_search" model="ir.ui.view">
        <field name="name">production.report.line.search</field>
        <field name="model">production.report.line</field>
        <field name="arch" type="xml">
            <search string="Production Report">
                <field name="product_id"/>
                <field name="lot_id" string="Batch No"/>
            </search>
        </field>
    </record>

    <!-- ===================================================== -->
    <!-- Action -->
    <!-- ===================================================== -->
    <record id="action_production_report_wizard" model="ir.actions.act_window">
        <field name="name">Production Report</field>
        <field name="res_model">production.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_production_report_wizard_form"/>
        <field name="target">new</field>
    </record>

</odoo>
