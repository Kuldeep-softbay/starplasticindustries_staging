<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit Purchase Analysis list view -->
    <record id="view_purchase_report_list_inherit_stock" model="ir.ui.view">
        <field name="name">purchase.report.list.stock.fields</field>
        <field name="model">purchase.report</field>
        <field name="inherit_id" ref="purchase.purchase_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list/field[@name='product_id']" position="after">
                <field name="opening_stock"/>
                <field name="purchase_qty"/>
                <field name="issue_qty"/>
                <field name="closing_stock"/>
            </xpath>
             <xpath expr="//list/field[@name='date_order']" position="attributes">
                <attribute name="optional">hide</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase.action_purchase_order_report_all" model="ir.actions.act_window">
        <field name="view_mode">list,graph,pivot</field>
        <field name="view_id" eval="False"/>
    </record>

</odoo>
