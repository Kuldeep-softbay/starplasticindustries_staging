<odoo>
<record id="purchase_order_line_add_rm_grade" model="ir.ui.view">
    <field name="name">purchase.order.line.add.rm.grade</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
        <xpath expr="//field[@name='order_line']/list/field[@name='product_id']" position="after">
            <field name="product_grade"/>
        </xpath>
    </field>
</record>
</odoo>